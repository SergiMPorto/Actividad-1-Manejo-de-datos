package main;

import java.util.Scanner;

public class ClaseFileMenu {

	public static void main(String[] args) {
		int opcion =0;

		do {
		opcion = pintarMenu();
		switch (opcion) {
		case 1:
			System.out.println(" CONSULTAR PELICULA POR ID ");
			
			break;
		case 2:
		    System.out.println("CONSULTAR PELICULA POR TITULO");
			
			break;
		case 3:
			System.out.println(" CONSULTAR PELICULA POR DIRECTOR ");
			
			break;
		case 4:
			System.out.println("AÑADIR PELICULA  ");
			break;
		case 5:
			System.out.println("EL PROCESO SE HA CERRADO");
			break;
		case 6:
			System.out.println("  EXPORTAR ARTÍCULOS A ARCHIVOS CSV ");
			break;
			
		}
		
		}while(opcion != 6);
		
		System.out.println(" === FIN DE PROGRAMA === ");
		}
	

	public static int pintarMenu() {
		Scanner leer = new Scanner(System.in);
		int opcion=0;
		System.out.println("             ★★★★★ MENÚ ★★★★★            ");
		System.out.println("      ------------------------------------             ");
		System.out.println("  1.         AÑADIR NUEVO ARTÍCULP          ");
		System.out.println("  2.        BORRAR ARTÍCULO POR ID   "          );
		System.out.println("  3.       CONSULTAR ARTÍCULO POR ID         ");
		System.out.println("  4.           AÑADIR PELICULA             ");
		System.out.println("  5                 SALIR                   ");
		System.out.println("  6.    EXPORTAR ARTÍCULOS A ARCHIVOS CSV             ");
		System.out.println(" PULSA UNA OPCION ENTRE 1 Y 6 PARA REALIZAR LA OPERACION O PULSA 5 PARA CERRAR EL PROCESO.");
		opcion=leer.nextInt();
     	while (opcion <1 || opcion >6 ) {
			System.out.println("PULAS UNA OPCION  DE 1 A 6");
			opcion=leer.nextInt();
			}
		return opcion;
	

	}

	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
}
